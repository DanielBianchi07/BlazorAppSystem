@page "/"
@inherits CreateHomePage

<PageTitle>Home</PageTitle>
    <MudContainer MaxWidth="MaxWidth.Medium" >

        <MudText Typo="Typo.h4" Class="mt-10 mb-6">Cadastro</MudText>

        <MudButton EndIcon="@Icons.Material.Filled.Login" Href="/login">Login</MudButton>

        <EditForm Model="@InputModel" Context="UsuarioForm" OnValidSubmit="OnValidSubmitAsync">
            <DataAnnotationsValidator />

        <MudTextField Label="Nome"
                        HelperText="Campo obrigatório"
                        @bind-Value="InputModel.Nome"
                        For="@(() => InputModel.Nome)" />

        <MudTextField Label="Email"
                            HelperText="Campo obrigatório"
                            @bind-Value="InputModel.Email"
                            For="@(() => InputModel.Email)" />

        <MudTextField Label="Senha"
                        HelperText="Campo obrigatório"
                        @bind-Value="InputModel.Senha"
                        For="@(() => InputModel.Senha)"
                        InputType="@InputType.Password"/>

        <MudButton ButtonType="ButtonType.Submit"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Class="mt-8 mb-10">
            Cadastrar
        </MudButton>
    </EditForm>
</MudContainer>